# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=orders_user
DB_PASSWORD=orders_pass
DB_NAME=orders_db
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_LOAD_TIMEOUT=10s

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=orders
KAFKA_GROUP_ID=order-service
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000

# HTTP Server Configuration
HTTP_PORT=8082
HTTP_READ_TIMEOUT=30s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=60s

# Cache Configuration
CACHE_MAX_SIZE=1000
CACHE_TTL=24h
CACHE_CLEANUP_INTERVAL=5m

# Application Configuration
GRACEFUL_SHUTDOWN_TIMEOUT=30s
ENVIRONMENT=development
SHUTDOWN_WAIT_TIMEOUT=5s

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Data Generator Configuration
GENERATOR_MAX_ORDERS=10000
GENERATOR_MAX_ITEMS_PER_ORDER=5
GENERATOR_MIN_PRICE=50
GENERATOR_MAX_PRICE=5000
GENERATOR_MAX_SALE=50

# Validation Configuration
VALIDATION_ORDER_UID_MIN_LENGTH=10
VALIDATION_ORDER_UID_MAX_LENGTH=50
VALIDATION_TRACK_NUMBER_MIN_LENGTH=5
VALIDATION_TRACK_NUMBER_MAX_LENGTH=20
VALIDATION_MAX_PAYMENT_AMOUNT=1000000
VALIDATION_MAX_ITEMS_PER_ORDER=100
VALIDATION_MAX_ITEM_PRICE=100000

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1s
RETRY_MAX_DELAY=30s
RETRY_MULTIPLIER=2.0

# DLQ Configuration
DLQ_ENABLED=true
DLQ_TOPIC=orders-dlq
DLQ_MAX_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics